[Unit]
Description=Hyperion Router - Telegram to Claude Code bridge
After=network.target

[Service]
Type=simple
User=admin
Group=admin
WorkingDirectory=/home/admin/hyperion-hub
Environment=PATH=/home/admin/.local/bin:/home/admin/.cargo/bin:/usr/local/bin:/usr/bin:/bin
EnvironmentFile=/home/admin/hyperion-hub/config/config.env
ExecStart=/home/admin/hyperion-hub/.venv/bin/python /home/admin/hyperion-hub/src/bot/hyperion_bot.py
Restart=always
RestartSec=10

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=hyperion-router

# Security
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
